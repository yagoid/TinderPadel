<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popups.PopupEquipos"
    android:background="@color/paleta5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/llEquipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tvEquipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/paleta1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvVS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_vs"
                android:textColor="@color/paleta3"
                android:textSize="40sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvEquipo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/paleta1"
                android:gravity="center" />

            <!--<View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#6E6C6C"/>-->

            <TextView
                android:id="@+id/tvVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_volver"
                android:textColor="@color/paleta4"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>